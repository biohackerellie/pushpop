            "noDuplicateClassMembers": "off",
            "noDuplicateObjectKeys": "off",
            "noDuplicateParameters": "off",
            "noFunctionAssign": "off",
            "noImportAssign": "off",
            "noRedeclare": "off",
            "noUnsafeNegation": "off",
            "useGetterReturn": "off",
            "noShadowRestrictedNames": "warn",
            "useAwait": "warn",
            "noImplicitAnyLet": "off",
            "noArrayIndexKey": "off",
            "noVar": "error"
          },
          "complexity": {
            "noArguments": "error"
          }
        }
